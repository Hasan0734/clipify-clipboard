{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Clipify",
  "version": "0.1.0",
  "identifier": "com.clipify-final.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Clipboard Manager",
        "width": 1200,
        "height": 800,
        "minHeight": 800,
        "minWidth": 1200,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Transparent",
        "devtools": true,
        "alwaysOnTop": false,
        "decorations": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],

    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/my-icon.png"]
  }
}
